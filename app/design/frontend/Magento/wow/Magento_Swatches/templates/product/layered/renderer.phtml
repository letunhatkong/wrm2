                        case '0':
                        default:
                            ?>
                            <label class="sel no-icon-mobile checkbox">
                            <input id="check_0" type="checkbox" name="<?= $swatchData['attribute_code'] ?>" value="<?= $option ?>">
                            <span class="<?= $label['label'] ?>"><?= $label['label'] ?></span>
                            </label><br>

                            <?php    break;
                    } ?>
