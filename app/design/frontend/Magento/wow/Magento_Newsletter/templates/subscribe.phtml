<script type="text/javascript">
    require(['jquery', 'jquery/ui'], function ($) {
        $(document).ready(function ($) {
            var $window = $(window);

            $('.click-ft-item').click(function () {
                var curWidth = $window.width();
                if (curWidth < 768) {
                    var isOpen = $(this).hasClass("open");
                    if (isOpen) {
                        $(this).removeClass("open");
                    } else {
                        $('#footer-default .open').removeClass('open');
                        $(this).addClass("open");
                    }
                }
            });
            function resetFooter() {
                $('#footer-default .click-ft-item').removeClass("open");
            }

            function checkWidth() {
                var windowSize = $window.width();
                var currDevice = $('#footer-default').attr("data-mobile");
                var isMobile = (windowSize < 768) ? true : false;
                if (currDevice == "1") {
                    if (!isMobile) resetFooter();
                } else if (currDevice == "0") {
                    if (isMobile) resetFooter();
                }
                (isMobile) ? $('#footer-default').attr("data-mobile", "1") : $('#footer-default').attr("data-mobile", "0");
            }

            // Resize
            checkWidth();
            $(window).resize(checkWidth);
        });
    });
</script>