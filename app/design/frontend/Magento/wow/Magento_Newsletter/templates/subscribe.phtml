<script type="text/javascript">
    require(['jquery', 'jquery/ui'], function ($) {
        $(document).ready(function ($) {
            var $window = $(window);
            // Click function
            $('.itemMenuFt .titFt').click(function () {
                if ($window.width() < 1240) {
                    var subMenu = $(this).parent().find('.subMenuFt');
                    subMenu.toggle();
                    if (subMenu.is(":visible")) {
                        $(this).addClass("open");
                    } else {
                        $(this).removeClass("open");
                    }
                }
            });
            // Reset Footer
            function resetFooter() {
                $('.subMenuFt').attr("style", "");
                $('.itemMenuFt .titFt').removeClass("open");
            }

            // Check Width
            function checkWidth() {
                var windowSize = $window.width();
                if (windowSize >= 1240) {
                    resetFooter();
                }
            }

            // Resize
            checkWidth();
            $(window).resize(checkWidth);
        });
    });
</script>
<script type="text/javascript">
    jQuery( document ).ready(function(jQuery) {
        var $window = jQuery(window);
        function checkWidth() {
            var windowsize = $window.width();
            var isMobile = (windowsize < 768) ? 1 : 0;
            var currentDevice =  jQuery("#footer-default").attr("isMobile-data");
            if (currentDevice == "1") {
                if (!isMobile) resetFooterSm();
            } else {
                (isMobile) ? resetFooterXs(): resetFooterSm();
            }
            jQuery("#footer-default").attr("isMobile-data", isMobile);
        }
        // Reset status begin mobile
        function resetFooterXs() {
            jQuery(".ft-sub-item").css("display", "none");
            jQuery('.click-ft-item').attr("check-data", "0");


            jQuery(this).addClass("carrot");
            jQuery(this).removeClass("carrot-tru");
        }
        // Reset status begin  # Mobile
        function resetFooterSm() {
            jQuery(".ft-sub-item").css("display", "block");
            jQuery('.click-ft-item').attr("check-data", "0");

            jQuery(this).addClass("carrot-tru");
            jQuery(this).removeClass("carrot");
        }
        // Check width begin first time
        checkWidth();
        jQuery(window).resize(checkWidth);
        jQuery('.click-ft-item').click(function(){
            var curWidth = $window.width();
            if (curWidth < 768) {
                var isOpen = jQuery(this).hasClass("carrot-tru");
                if (isOpen) {
                    jQuery(this).removeClass("carrot-tru");
                } else {
                    jQuery('#footer-default .carrot-tru').removeClass('carrot-tru');
                    jQuery(this).addClass("carrot-tru");
                }
            }
        });
    });


</script>