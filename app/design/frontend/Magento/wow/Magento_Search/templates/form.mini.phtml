<script type="text/javascript">
    require(['jquery', 'jquery/ui'], function($){
        $(document).ready(function($) {
            $('#clickSearchIcon').click(function(){
                $('#searchControl').toggle();
            });

            $('#closeSearch').click(function() {
                $('#searchControl').css("display","none");
            });
        });
    });
</script>