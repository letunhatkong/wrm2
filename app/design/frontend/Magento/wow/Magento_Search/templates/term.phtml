<?php if (sizeof($block->getTerms()) > 0): ?>
    <ul class="search-terms">
        <?php foreach ($block->getTerms() as $_term): ?>
            <li class="item">
                <a href="<?= $block->getSearchUrl($_term) ?>"
                   style="font-size:<?= $_term->getRatio()*70+75 ?>%;">
                    <?php echo $block->escapeHtml($_term->getName()) ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <div class="message notice">
        <div><?= __('There are no search terms available.'); ?></div>
    </div>
<?php endif; ?>
